<%- include('partials/_header')%>
   <div class="container">
      <div class="row">
  

  <!---------------------------------->
  <!-- Button trigger modal -->

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Nueva Nota
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nota</h5>
          
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          
                <form action="/add" method="POST">
                     <div class="form-group mb-3">
                        <input type="text" name="title" placeholder="Titulo de la nota" class="form-control">
                      </div> 
                    <div class="form-group mb-3">                            
                       <textarea type="text" name="description" placeholder="Nota..." class="form-control" cols="50" ></textarea>
        
                   </div>  
                  <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                      <button type="submit" class="btn btn-outline-success">Guardar</button>
                 </div>                                           
                   </form>

        </div>
        
      </div>
    </div>
  </div>
       


  <!-- Vertically centered modal -->
<div class="modal-dialog modal-dialog-centered">
    ...
  </div>
  
  <!-- Vertically centered scrollable modal -->
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    ...
  </div>
 

  <!-- Modal Structure -->




  
    

  
          
          
           


       
        <!--Tabla-->
        <div class="col-md-7">
            <table class="table table-bordered border-primary ">
               <tbody>
                   <% for(var i=0; i < tasks.length; i++) {%>
                   <p><%= i+1%></p> 
                        
                    <div class="row">
                         <div class="col s12 m6">
                             <div class="card blue-grey darken-1">
                             <div class="card-content white-text">
                                  <span class="card-title"><%= tasks[i].title %></span>
                                <p><%= tasks[i].description %></p>
                                 </div>
                                <div class="card-action">
                                    <a href="/turn/<%= tasks[i]._id%>"
                                        class="btn <%= tasks[i].status ? 'btn-success btn-sm':'btn-warning btn-sm'%> ">Hecho</a>
                                   <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger btn-sm">Eliminar</a>
                                   <a href="/edit/<%= tasks[i]._id%>" class="btn btn-info btn-sm">Editar</a>
                                    </div>
                                 
                               </div>
                               
                        </div>
                
                    </div>
                       
                     
                    <%}%>
               </tbody>
            </table>
        </div>
      </div>
   </div>

<%- include('partials/_footer')%>
