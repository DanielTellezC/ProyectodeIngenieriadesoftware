  <!-- Button trigger modal -->
<div class="float-start">
  <a class="fs-1" data-bs-toggle="modal" data-bs-target="#exampleModal">
      <i class="lni lni-circle-plus"></i>
  </a>
</div>
  <!-- ventana Modal para la realizacion de la Nota-->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-dark">
          <h5 class="modal-title text-white" id="exampleModalLabel">Nota</h5>
          
          <button type="button" class="btn-close bg-danger" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          
                <form action="/add" method="POST">
                    <div class="form-group mb-3">
                        <input type="text" name="title" placeholder="Titulo de la nota" class="form-control" required>
                    </div> 
                    <div class="form-group mb-3">                            
                       <textarea type="text" name="description" placeholder="Nota..." class="form-control" cols="500" required></textarea>
                    </div>  
                   <div class="form-group mb-3">
                        <p class="fs-4">Importancia de la tarea</p>
                        <input type="radio" name="color" value="Baja">Baja
                        <br>
                        <input type="radio" name="color" value="Media" checked>Media
                        <br>
                        <input type="radio" name="color" value="Alta">Alta
                    </div>
                    <div class="form-group mb-3" >
                        <input class="form-control" type="date" name="fechadeinicio">
                    </div>

                  <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                      <button type="submit" class="btn btn-outline-success">Guardar</button>
                 </div>                                           
                </form>

        </div>
        
      </div>
    </div>
  </div>
