<%- include('partials/_header')%>
   <div class="container">
      <div class="row">
  

  <!---------------------------------->
  <!-- Button trigger modal -->

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Nueva Nota
  </button>
  
  <!-- ventana Modal para la realizacion de la Nota-->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nota</h5>
          
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          
                <form action="/add" method="POST">
                    <div class="form-group mb-3">
                        <input type="text" name="title" placeholder="Titulo de la nota" class="form-control">
                      </div> 
                    <div class="form-group mb-3">                            
                       <textarea type="text" name="description" placeholder="Nota..." class="form-control" cols="500"></textarea>
                   </div>  
                   <div class="form-group mb-3">
                        <p>Importancia de la tarea</p>
                        <input type="radio" name="color" value="Baja">Baja
                        <br>
                        <input type="radio" name="color" value="Media" checked>Media
                        <br>
                        <input type="radio" name="color" value="Alta">Alta
                    </div>


                  <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                      <button type="submit" class="btn btn-outline-success">Guardar</button>
                 </div>                                           
                   </form>

        </div>
        
      </div>
    </div>
  </div>
       
       
        <!-- Visualizacion de las notas -->
        <div class="row row-cols-lg-auto g-3 align-items-center">
            <table class="table table-bordered border-primary ">
               <tbody>
                   <% for(var i=0; i < tasks.length; i++) {%>
                   <p><%= %></p> 
                    
                   
                   <% if(tasks[i].color == "Baja"){%>
                    <div class="card text-dark mb-3" style="max-width: 18rem;">
                        <div class="card-header text-white bg-success"><%= tasks[i].color %></div>
                        <div class="card-body">
                          <h5 class="card-title"><%= tasks[i].title %></h5>
                          <p class="card-text"><%= tasks[i].description %></p>
                          <div class="card-action">
                            <a href="/turn/<%= tasks[i]._id%>"
                                class="btn <%= tasks[i].status ? 'btn btn-primary btn-sm':'btn btn-outline-primary btn-sm'%> ">Hecho</a>
                           <a href="/delete/<%= tasks[i]._id %>" class="btn btn-secondary btn-sm">Eliminar</a>
                           <a href="/edit/<%= tasks[i]._id%>" class="btn btn-secondary btn-sm">Editar</a>
                         </div>
                        </div>
                      </div>
                    <%}else if(tasks[i].color == "Media"){%>
                        <div class="card text-dark  mb-3" style="max-width: 18rem;">
                            <div class="card-header text-dark bg-warning"><%= tasks[i].color %></div>
                            <div class="card-body">
                              <h5 class="card-title"><%= tasks[i].title %></h5>
                              <p class="card-text"><%= tasks[i].description %></p>
                              <div class="card-action">
                                <a href="/turn/<%= tasks[i]._id%>"
                                    class="btn <%= tasks[i].status ? 'btn-primary btn-sm':'btn-outline-primary btn-sm'%> ">Hecho</a>
                               <a href="/delete/<%= tasks[i]._id %>" class="btn btn-secondary btn-sm">Eliminar</a>
                               <a href="/edit/<%= tasks[i]._id%>" class="btn btn-secondary btn-sm">Editar</a>
                             </div>
                            </div>
                        </div>
                    <%}else if(tasks[i].color == "Alta"){%>
                        <div class="card text-dark  mb-3" style="max-width: 18rem;">
                            <div class="card-header text-white bg-danger"><%= tasks[i].color %></div>
                            <div class="card-body">
                              <h5 class="card-title"><%= tasks[i].title %></h5>
                              <p class="card-text"><%= tasks[i].description %></p>
                              <div class="card-action">
                                <a href="/turn/<%= tasks[i]._id%>"
                                    class="btn <%= tasks[i].status ? 'btn-primary btn-sm':'btn-outline-primary btn-sm'%> ">Hecho</a>
                               <a href="/delete/<%= tasks[i]._id %>" class="btn btn-secondary btn-sm">Eliminar</a>
                               <a href="/edit/<%= tasks[i]._id%>" class="btn btn-secondary btn-sm">Editar</a>
                             </div>
                            </div>
                        </div>
                    <%}%>
                    
                   
        </div>
                       
                     
                    <%}%>
               </tbody>
            </table>
        </div>
      </div>
   </div>

<%- include('partials/_footer')%>
