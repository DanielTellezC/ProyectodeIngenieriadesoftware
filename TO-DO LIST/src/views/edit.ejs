<%- include('partials/_header')%>
<div class="container">
    <div class="row">
        <!--Formulario-->
    <div class="col-md-5 offset-md-3">
        <div class="card">
            <div class="card-doby">
                <form action="/edit/<%= task._id %>" method="POST">
                    <div class="form-group mb-3">
                        <input type="text" name="title" placeholder="Inserta un titulo" class="form-control" value="<%= task.title%>">
                    </div> 
                    <div class="form-group mb-3">                            
                        <textarea type="text" name="description" placeholder="Inserta una descripcion" class="form-control" cols="50"><%= task.description %></textarea>
                    </div>  
                    <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                        <button type="submit" class="btn btn-outline-success">Modificar</button>
                    </div>                                           
                </form>
            </div>
        </div>
    </div>
    </div>
</div>    
<%- include('partials/_footer')%>